<%= form_for :order, :url => populate_orders_path do |f| %>
    <div id="variantTabs">
      <ul class="nav nav-tabs">
        <% @styles.each_with_index do |option_value, index| %>
            <li <% if index == 0 %>class="active"<% end %>>
              <a href="#<%= sanitize_id(option_value.presentation) %>"
                 class='nav-tab-button'
                 data-option-value-id='<%= option_value.id %>'>
                <%= option_value.presentation %>
              </a>
            </li>
        <% end %>
      </ul>

      <div class="tab-content imprinted-product-layout">
        <% @styles.each_with_index do |option_value, index| %>
            <div class="tab-pane clearfix  <% if index == 0 %>active<% end %>" id="<%= sanitize_id(option_value.presentation) %>">

              <p class="clearfix text-right" style="margin: 0.5em 2.5em">
                <% if !@sizing_guides[option_value.id].nil? %>
                    <%= link_to 'Sizing Guide', "##{option_value.id}",  'data-toggle' => 'modal',
                                'data-target' => '#sizingModal',
                                'data-style-id' => option_value.id,
                                'data-style-name' => "#{option_value.presentation}"   %>
                <% else %>
                    <%= link_to 'No Sizing Available', "#" %>
                <% end %>
              </p>

              <ul class="variants">
                <% @product.variants_with_option_value(option_value).find_each do |variant| %>
                    <li>
                      <input id="<%= variant.id %>" class="btn btn-default variant-button variant-shoe-button" type="button" value="<%= variant.option_value('apparel-size') %>" data-price="<%= Spree::Money.new(variant.price, currency: current_currency, with_currency: false).to_s %>" >
                    </li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <%= hidden_field_tag :variant_id, '', 'data-variant-count' => @product.variants.count %>
        <%= hidden_field_tag :quantity, 1 %>
        <div class="btn-group clearfix buy-button" id="buy-button">
          <%= f.submit 'BUY SHOES', class: 'btn btn-default' %>
          <%= f.submit number_to_currency(@product.price), class: 'btn btn-default', id: 'variant-price' %>
        </div>
      </div>
    </div>
<% end %>

<%= render 'spree/products/sizing_guide_modal', sizing_guides: @sizing_guides %>