<% content_for :page_title do %>
    <%= Spree.t(:new_stylesheet) %>
<% end %>

<% content_for :page_actions do %>
    <li>
      <%= button_link_to Spree.t(:back_to_stylesheets_list), spree.admin_stylesheets_path, :icon => 'icon-arrow-left' %>
    </li>
<% end %>

<div data-hook="admin_stylesheet_edit_form_header">
  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @stylesheet } %>
</div>

<div data-hook="admin_stylesheet_edit_form">
  <%= form_for [:admin, @stylesheet], html: {multipart: true}  do |f| %>
      <fieldset class="no-border-top">

        <%= render 'form', f: f  %>

        <div class="clear"></div>

        <div data-hook="admin_stylesheet_edit_form_buttons">
          <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
        </div>
      </fieldset>
  <% end %>
</div>