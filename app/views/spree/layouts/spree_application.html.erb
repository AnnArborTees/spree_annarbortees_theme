  <% trusted_store = (extend Spree::GoogleTrustedStoreHelper) && true rescue false %>

    <head data-hook="inside_head">
      <%= render :partial => 'spree/shared/head' %>
    </head>

    <body class="<%= body_class %> annarbortees" id="<%= @body_id || 'default' %>" data-hook="body">

    <%= render partial: 'spree/shared/header' %>

    <%= flash_messages %>

    <%= yield %>

    <!-- FOOTER -->
    <div class="container">
      <footer>
        <div class="row">
          <div class="col-lg-4 col-sm-6 col-xs-12">
            <h3>Get Social With Us</h3>
            <ul class="social-footer">
            <li>
              <%= link_to 'http://www.pinterest.com/annarbortees/', target: '_blank' do %>
                  <i class="fa fa-pinterest fa-3x"></i><br />Pin
              <% end %>
            </li>
            <li>
              <%= link_to 'http://www.facebook.com/annarbortshirtcompany', target: '_blank' do %>
                  <i class="fa fa-facebook fa-3x"></i><br />Like
              <% end %>
            </li>
            <li>
              <%= link_to 'http://twitter.com/annarbortees', target: '_blank' do %>
                  <i class="fa fa-twitter fa-3x"></i><br />Tweet
              <% end %>
            </li>
            </ul>
          </div>
          <div class="col-lg-4 col-sm-6 col-xs-12">
            <h3>Shop Securely</h3>
            <span id="siteseal"><script type="text/javascript" src="https://seal.godaddy.com/getSeal?sealID=C3aOudlOQqx1s1P3FS6gsYEYaF3pWDwAx97MgounipehtjLfJi7OESI"></script></span>
            <script type="text/javascript" language="javascript">var ANS_customer_id="c0a25aca-6881-4b9c-bc56-9d53b1a9208a";</script> <script type="text/javascript" language="javascript" src="//verify.authorize.net/anetseal/seal.js" ></script>
          </div>
          <div class="col-lg-4 col-sm-12">
            <h3>Quick Links</h3>
            <ul class="quick-links">
              <li>
                <%= link_to 'Help', help_path %>
              </li>
              <li>
                <%= link_to 'Account', account_path %>
              </li>
              <li>
                <%= link_to 'The Company', 'http://www.annarbortees.com/about-the-company/', target: '_blank' %>
              </li>
            </ul>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 footer-story">
            <h5>The Ann Arbor Tees Story</h5>
            <p>
              The Ann Arbor T-shirt Company was founded in 2008 in a two bedroom apartment on the north side of Ann Arbor,
              Michigan. We have since moved all the way across town to the south side, where our warehouse designs, prints,
              and ships t-shirts and other apparel all over the world. We have 50 - 80 employees depending on the time of
              year, two dogs, and an embroidery art specialist who is fairly cat-like. We run world-class printing equipment
              made in Chicago, Illinois to make sure our work is as good as it possibly can be, and proudly stand by it.
            </p>
          </div>
        </div>
        <div class="row">
        <div class="col-lg-12">
          <p class="text-center">
            The Ann Arbor T-shirt Company and Logo is Trademark of the The Ann Arbor T-shirt Company LLC<br />
            All Content is Copyright &copy; 2008-<%= Time.now.strftime('%Y') %>
          </p>
        </div>
        </div>
      </footer>
    </div>
    <!-- /container -->

    <%= try(:google_trusted_store_badge) if defined? @google_badge && @google_badge %>
    <% if defined? @google_order && @google_order.is_a?(Spree::Order) %>
      <%= try(:google_trusted_store_order_confirmation, @google_order) %>
    <% end %>

    <%= render :partial => 'spree/shared/google_analytics' %>
    <% if Rails.env.production? %>
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-8089901-1', 'auto');
            ga('send', 'pageview');

        </script>
    <% end %>

  </body>
</html>
