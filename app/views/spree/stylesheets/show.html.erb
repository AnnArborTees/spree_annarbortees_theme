.starkid-theme {
/*
/* Products List (All Sizes)
/****************************/
/*--------------------------------------*/
/* Flash notices & errors
/*--------------------------------------*/
}
.starkid-theme body {
background-color: #000;
}
.starkid-theme #banner-slides {
background: #000;
background-size: cover;
text-align: center;
}
.starkid-theme .navbar-top {
background-color: #cbeafc;
}
.starkid-theme .navbar-bottom {
background-color: #125e1d;
}
.starkid-theme .search .input-group input {
border-color: #FFFFFF;
}
.starkid-theme .search .input-group input:focus {
border-color: #125e1d;
}
.starkid-theme .search .input-group button {
color: #125e1d;
}
.starkid-theme .cart .fa-shopping-cart {
color: #125e1d;
}
.starkid-theme .cart .badge {
background-color: #CC0000;
}
.starkid-theme #large-nav .help a {
color: #FFFFFF;
}
.starkid-theme .store-search-selection {
background-color: #ededed;
}
.starkid-theme .search-selected {
background-color: #b7b7b7;
border: 1px solid #b7b7b7;
}
.starkid-theme .breadcrumb a {
color: #FFFFFF;
}
.starkid-theme .breadcrumb > li + li:before {
color: #FFFFFF;
}
.starkid-theme .breadcrumb > .active {
color: #ffa509;
}
.starkid-theme #taxonomies {
background-color: #ededed;
}
.starkid-theme #taxonomies .subtaxon {
border: solid #ffa509 2px;
background-color: #ededed;
}
.starkid-theme #taxonomies li.active {
background-color: #ffa509;
color: #FFFFFF;
}
.starkid-theme #taxonomies h4 {
color: #ffa509;
border-bottom: solid 1px #000000;
}
.starkid-theme ul.products li .product-image-and-price-wrapper {
background-color: #e1d9d6;
}
.starkid-theme ul.products li .product-image-and-price-wrapper .price {
background-color: #ffa509;
color: #FFFFFF;
}
.starkid-theme ul.products li img {
-webkit-filter: drop-shadow(0px 0px 10px rgba(0, 0, 0, 0.5));
filter: drop-shadow(0px 0px 10px rgba(0, 0, 0, 0.5));
}
.starkid-theme .pagination a {
color: #125e1d;
}
.starkid-theme .pagination .active a {
color: #FFFFFF;
background-color: #125e1d;
border-color: #ffa509;
}
.starkid-theme .pagination .active a:hover {
color: #FFFFFF;
background-color: #ffa509;
border-color: #ffa509;
}
.starkid-theme .social-footer i {
color: #FFFFFF;
background-color: #125e1d;
}
.starkid-theme .footer-story {
border-top: solid 1px #ededed;
border-bottom: solid 1px #ededed;
}
.starkid-theme .browse-all-button .btn {
box-shadow: none;
color: #FFFFFF;
background-color: #125e1d;
}
.starkid-theme .cart-item-total, .starkid-theme .large-cart-item-unit-price {
color: #125e1d;
}
.starkid-theme .cart-item-total .delete, .starkid-theme .large-cart-item-unit-price .delete {
color: #CC0000;
}
.starkid-theme .cart-checkout-button button {
color: #125e1d;
background-color: #ffa509;
border: 2px solid #125e1d;
}
.starkid-theme .cart-quantities-update .btn {
color: #FFFFFF;
background-color: #125e1d;
border: 2px solid #125e1d;
}
.starkid-theme .cart-quantities-update .btn-empty-cart {
background-color: #CC0000;
border: 2px solid #CC0000;
}
.starkid-theme .cart-coupon-form .btn {
color: #FFFFFF;
background-color: #125e1d;
border: 2px solid #125e1d;
}
.starkid-theme .cart-headers div {
background-color: #125e1d;
color: #FFFFFF;
}
.starkid-theme #checkout .panel-heading {
background-color: #125e1d;
color: #FFFFFF;
}
.starkid-theme #checkout .btn-success {
color: #125e1d;
border: solid 2px #125e1d;
background-color: #ffa509;
}
.starkid-theme ol.progress-steps {
background-color: #ededed;
}
.starkid-theme ol.progress-steps li.completed {
background-color: #125e1d;
color: #FFFFFF;
}
.starkid-theme ol.progress-steps li.completed a:link, .starkid-theme ol.progress-steps li.completed a:visited, .starkid-theme ol.progress-steps li.completed a:hover {
color: #FFFFFF;
}
.starkid-theme ol.progress-steps li.current {
background-color: #ffa509;
color: #125e1d;
}
.starkid-theme .help-section h3 {
color: #ffa509;
}
.starkid-theme .help-section h4 {
color: #125e1d;
}
.starkid-theme .flash {
color: #FFFFFF;
}
.starkid-theme .flash.notice {
background-color: #00ADEE;
}
.starkid-theme .flash.success {
background-color: #8dba53;
}
.starkid-theme .flash.error {
background-color: #e45353;
}
.starkid-theme .tweet {
background-color: #fff;
}
.starkid-theme .tweet .name {
font-color: #000000;
}
.starkid-theme .wishlists .btn {
background-color: #ffa509;
color: #000000;
}
.starkid-theme .wishlists .btn-primary {
background-color: #125e1d;
color: #FFFFFF;
}
.starkid-theme .wishlists .btn-danger {
background-color: #CC0000;
color: #FFFFFF;
}
